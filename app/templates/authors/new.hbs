<h2>Add a new Author</h2>

<div class="form-horizontal">
  <div class="form-group has-feedback {{if model.isValidName 'has-success'}}">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="The name of the Author"}}
      {{#if model.isValidName}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveAuthor' model}} disabled="{{unless model.isValid true}}">Add Author</button>
    </div>
  </div>
</div>
